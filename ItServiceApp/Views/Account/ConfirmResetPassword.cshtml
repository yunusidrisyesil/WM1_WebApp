@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
}

<!--====== Page Title start ======-->
<partial name="Partials/_PageTitlePartial" />
<!--====== Page Title End ======-->
<!--====== Shoping Checkout Start  ======-->
<section class="shoping-checkout-area section-gap">
    <div class="container">
        <div class="user-actions mb-40">
            <div class="text-info">@TempData["Message"]</div>
            <div asp-validation-summary=All class="text-danger"></div>
        </div>
        <form asp-action="ConfirmResetPassword" asp-controller="Account" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <div class="billing-details">
                        <h3 class="title">Update Password</h3>
                        <div class="row">
                            <input name="userID" value="@ViewBag.UserID" id="userID" type="hidden" />
                            <input name="Code" value="@ViewBag.Code" id="Code" type="hidden"/>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <button type="submit" class="btn btn-success" value="Button">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!--====== Shoping Checkout End ======-->
@section Styles{
<style>
    input {
        border: solid 1px #e3eeff;
        height: 50px;
        padding: 0 15px;
    }
</style>
}
