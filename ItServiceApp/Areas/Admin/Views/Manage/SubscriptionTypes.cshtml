@{
    ViewBag.Title = "Subscription Types";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Subscription Types</h4>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="dxGrid"> </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
<script>
    var dataGrid = null;
    $(()=>{
        var url = '../../../api/subscriptiontypeapi';
        dataGrid = $("#dxGrid").dxDataGrid({
            remoteOperations: true,
            dataSource: DevExpress.data.AspNet.createStore({
                key: 'id',
                loadUrl: `${url}/get`,
                updateUrl: `${url}/update`,
                insertUrl: `${url}/insert`,
                deleteUrl: `${url}/delete`,
                onBeforeSend(method,ajaxOptions){
                    ajaxOptions.xhrFields = {withCredentials: true};
                    console.log(method);
                    console.log(ajaxOptions);
                }
            }),

            editing:{
                mode: 'form',
                allowUpdating: true,
                allowAdding: true,
                allowDeleting: true
            },
            allowColumnResizing: true,
            showColumnLines: true,
            showRowLines: true,
            rowAlternationEnabled: true,
            showBorders: true,
            searchPanel: {
                visible: true,
                width: 240,
                placeholder: "Search.."
            },
            filterRow: {
                visible:true,
                applyFilter: "auto"
            },
            headerFilter: {
                visible:true,
            },
            export: {
                enabled: true,
                fileName: `All Subscriptions _${parseInt(Math.random() * 10000000)}`,
                allowExportSelectedData:true
            },
            paging:{
                pageSize:20
            },
            pager:{
                showPageSizeSelector: true,
                allowPageSizes: [5,15,30,45],
                showInfo:true
            },
            selection: {
                mode: "multiple",
            },
            columns: [
                {
                    dataField: "id",
                    caption: "Id",
                    visible : false,
                    allowFiltering: false,
                    formItem: {visible: false}
                }
                ,
                {
                    dataField: "name",
                    caption: "Name"
                },
                {
                    dataField: "description",
                    caption: "Description"
                },
                {
                    dataField: "month",
                    caption: "Month",
                    dataType: "number"
                },
                {
                    dataField: "price",
                    caption: "Price",
                    dataType:"number",
                    format: "$#.##",
                },
                {
                    dataField: "createdDate",
                    caption: "Register Date",
                    dataType: "date",
                    format: 'dd/MM/yyyy',
                    sortOrder:"desc"
                }
            ]

        }).dxDataGrid("instance");
        console.log("Ok");
    });
</script>
}