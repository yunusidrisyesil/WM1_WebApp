@model List<Employee>

<div class="row">
    <div class="col-md-3" ></div>
    <div class="col-md-6" >
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2">
                <a class="btn btn-success" asp-action="Create" asp-controller="Employee">Add</a>
            </div>
        </div>
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Title</th>
                    <th>HireDate</th>
                    <th>Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Title</td>
                        <td>@item.HireDate.Value.Day/@item.HireDate.Value.Month/@item.HireDate.Value.Year</td>
                        <td><a class="btn btn-primary" asp-action="Detail" asp-controller="Employee" asp-route-id="@item.EmployeeId">Detail</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-3" ></div>
</div>